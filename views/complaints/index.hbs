<div class="container">
    <a class="btn btn-info" href="/user/{{userId}}/Complaints/new">+ Complaint</a>

    <h2 class="text-center">Complaints</h2>

    {{#each user.Complaints}}
    <a href='/user/{{../user._id}}/Complaints/{{id}}'>
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">{{../user.username}}</h5>
                <p class="card-text">{{content}}</p>
            </div>
        </div>
    </a>
    {{/each}}
</div>